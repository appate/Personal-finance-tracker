<link rel="stylesheet" type="text/css" href="/public/change_password.css" />
<div class="container">
    <h2>Change Password</h2>
    <form id="change-password-form" action="/settings/changepassword" method="post">
        <label for="current_pwd">Enter Current Password:</label>
        <input type="password" id="current_pwd" name="current_pwd" required>
        <label for="new_pwd">Enter New Password:</label>
        <input type="text" id="new_pwd" name="new_pwd" required>
        <label for="confirm_new_pwd">Confirm new Password:</label>
        <input type="password" id="confirm_new_pwd" name="confirm_new_pwd" required>

        <button type="submit">Change</button>
    </form>
</div>

<div id="error-container-change_password">{{error}}</div>

<script src='/public/validations/change_password.js'></script>